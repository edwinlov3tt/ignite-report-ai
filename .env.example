# Report.AI Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Frontend Environment Variables (Vite)
# ============================================

# Cloudflare Worker API URL
# Production: https://report-ai-api.your-domain.workers.dev
# Development: http://localhost:8787
VITE_API_URL=https://report-ai-api.edwin-6f1.workers.dev

# Supabase Configuration (for direct frontend access if needed)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================
# Worker Environment Variables (Cloudflare)
# ============================================
# These are configured in wrangler.toml or via Cloudflare dashboard

# AI API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Default AI Model
# Available models: 
# - claude-sonnet-4-20250514
# - claude-opus-4-1-20250805
# - gpt-4-turbo
# - gpt-4o
DEFAULT_AI_MODEL=claude-sonnet-4-20250514

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# External API Configuration
LUMINA_API_URL=https://api.edwinlovett.com/order

# ============================================
# Cloudflare KV Namespaces (configured in wrangler.toml)
# ============================================
# These are bound in wrangler.toml, not environment variables
# - PLATFORMS_KV
# - INDUSTRIES_KV  
# - SOUL_DOCS_KV
# - SCHEMA_KV
# - LUMINA_CACHE_KV

# ============================================
# Cloudflare R2 Storage (configured in wrangler.toml)
# ============================================
# - REPORTS_R2 (bucket: report-ai-reports)

# ============================================
# Optional: Development/Debugging
# ============================================
# Enable debug logging (set to "true" to enable)
DEBUG=false

# Development API URLs (for local testing)
VITE_DEV_API_URL=http://localhost:8787

# ============================================
# Legacy/Migration Variables (if still needed)
# ============================================
# MySQL Database Configuration (for legacy PHP app)
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_PORT=3306

# ============================================
# Environment Type
# ============================================
# Options: development, staging, production
NODE_ENV=production
ENVIRONMENT=production